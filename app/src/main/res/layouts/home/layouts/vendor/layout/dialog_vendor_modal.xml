<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="24dp"
    android:background="@drawable/shape_radius"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/gooday"
            android:textColor="@color/_gray_900"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_vendor"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lg_vendor3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/entered_dismiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/_gray_200"
                android:text="dismiss"
                android:textAllCaps="false"
                android:textColor="@color/_gray_600"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/entered_explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/_primary_500"
                android:text="explore"
                android:textAllCaps="false"
                app:cornerRadius="4dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>